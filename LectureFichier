#!/usr/bin/env python
# -*- coding:utf-8 -*-

import os
import sys
import gzip
import logging

#Files hérite de la classe object
class Files(object):
  def __init__(self, File):
    self._fos = File
    
  def __iter__(self):
    try:
      if self._fos.lower().endswith(('.gz', '.gzip')):
        fp = gzip.open(self._fos)
    except:
      printf("un des fichiers proposés n'es pas en .gz ou .gzip")    
    
    for line in enumerate(fp):
      line = line.decode()
      yield line
    fp.close()
  
